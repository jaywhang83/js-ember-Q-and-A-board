{{#if addNewQuestion}}
  <h4>New Question</h4>
  <div class="row">
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <label for="author">Author</label>
         {{input value=author id="author"}}
       </div>
     </div>
     <div class="row">
       <div class="input-field col s12">
         <label for="title">question</label>
         {{input value=title id="title"}}
       </div>
     </div>
     <div class="row">
      <div class="row">
        <div class="input-field col s12">
          <label for="notes">Detail notes</label>
          {{textarea value=notes id="notes" class="materialize-textarea"}}
        </div>
      </div>
    </div>
      <button class="waves-effect waves-light btn green" {{action 'saveQuestion'}}>Save</button>
   </form>
 </div>
{{else}}
  <button class="waves-effect waves-light btn"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
