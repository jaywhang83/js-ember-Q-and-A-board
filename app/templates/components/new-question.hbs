{{#if addNewQuestion}}
<div class="card-panel large">
  <h4>New Question</h4>
  <div class="row">
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <label for="author">Author</label>
         {{input value=author id="author"}}
       </div>
     </div>
     <div class="row">
       <div class="input-field col s12">
         <label for="title">question</label>
         {{input value=title id="title"}}
       </div>
     </div>
     <div class="row">
      <div class="input-field col s12">
        <label for="notes">Detail notes</label>
        {{textarea value=notes id="notes" class="materialize-textarea"}}
      </div>
    </div>
      <button class="btn-floating btn-large green tooltipped btn tooltipped" data-position="right" data-delay="50" data-tooltip="Save" {{action 'saveQuestion'}}>Save</button>
      <button  class="btn-floating btn-large blue tooltipped btn tooltipped" data-position="right" data-delay="50" data-tooltip="Cancel" {{action 'formHide'}}>Cancel</button>
   </form>
 </div>
 </div>
