{{#if addNewQuestion}}
<div class="card-panel large">
  <h4>New Question</h4>
  <div class="row">
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <label for="author">Author</label>
         {{input value=author id="author"}}
       </div>
     </div>
     <div class="row">
       <div class="input-field col s12">
         <label for="title">question</label>
         {{input value=title id="title"}}
       </div>
     </div>
     <div class="row">
      <div class="input-field col s12">
        <label for="notes">Detail notes</label>
        {{textarea value=notes id="notes" class="materialize-textarea"}}
      </div>
    </div>
      <button class="waves-effect waves-light btn green" {{action 'saveQuestion'}}>Save</button>
      <button  class="waves-effect waves-light btn green" {{action 'formHide'}}>Cancel</button>
   </form>
 </div>
 </div>
{{else}}
  <button data-target="modal1" class="waves-effect waves-light btn modal-trigger" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
