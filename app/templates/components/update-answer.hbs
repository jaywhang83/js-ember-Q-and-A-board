{{#if updateAnswerForm}}
  <h4>Update {{answer.author}}'s answer</h4>
  <div class="row">
   <form class="col s12">
     <div class="row">
       <div class="input-field col s6">
         <label for="author">Author</label>
         <br>
         {{input value=author id="author" placeholder=answer.author}}
       </div>
     </div>
     <div class="row">
      <div class="input-field col s12">
        <label for="content">Answer</label>
        <br>
        {{textarea value=content id="content" placeholder=answer.content class="materialize-textarea"}}
      </div>
    </div>
      <button class="waves-effect waves-light btn green" {{action 'update' answer}}>Save</button>
      <button class="waves-effect waves-light btn green" {{action 'formHide'}}>Cancel</button>
   </form>
 </div>
{{else}}
    <button class="waves-effect waves-light btn blue" {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
