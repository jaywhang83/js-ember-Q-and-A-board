<h4>More detail about {{model.author}}'s question:</h4>
<!-- To delete -->
{{question-detail question=model destroyQuestion="destroyQuestion"}}
<br>
{{update-question question=model update="update"}}
<br>
{{new-answer saveAnswer="saveAnswer" question=model}}

<p>Answers:</p>
{{#each model.answers as |answer|}}
  {{answer-tile answer=answer}}
{{/each}}

<div class="fixed-action-btn horizontal" style="top: 45px; right: 24px;">
   <a class="btn-floating btn-large red">
     <i class="large material-icons">mode_edit</i>
   </a>
   <ul>
     <li><a class="btn-floating red" {{question-detail question=model destroyQuestion="destroyQuestion"}}><i class="material-icons">insert_chart</i></a></li>
     <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
     <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
     <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
   </ul>
 </div>
